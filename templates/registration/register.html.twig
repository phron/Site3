{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    

     <section class="container" id="registerSection">
        
        <div class="row " id="registerRow">
            
            <div class="col shadow-sm p-3 mb-5 bg-body rounded">
                <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe',
                }) }}
                {{ form_row(registrationForm.RGPDConsent) }}

        <button type="submit" class="btn btn-primary">M'inscrire</button>
    {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock %}
