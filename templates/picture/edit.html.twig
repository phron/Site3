{% extends 'base.html.twig' %}

{% block title %}Edit Picture{% endblock %}

{% block body %}

    <section class="row text-center" id="rowEditPicture">
        <h1 class="mb-3">Edit Picture</h1>
        <div class="col">
            <img src="{{ asset('/uploads/pictures/'~ picture.pictureFile) }}" height="150px">
        </div>
        <div class="col">
            {{ include('picture/_form.html.twig', {'button_label': 'Update'}) }}    
        </div>
        <div class="col">      
            {{ include('picture/_delete_form.html.twig') }}
            <a href="{{ path('app_picture_index') }}" class="btn btn-secondary my-1">back to list</a>
        </div>
    </section>



{% endblock %}

