{% extends 'base.html.twig' %}

{% block title %}Picture index{% endblock %}

{% block body %}
    <h1>Picture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Preview</th>
                <th scope="col">AltText</th>
                <th scope="col">PictureFile</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <th scope="row">{{ picture.id }}</th>
                <td>{{ picture.title }}</td>
                <td><img src="{{ asset('/uploads/pictures/'~ picture.pictureFile) }}" height="80px"></img></td>
                <td>{{ picture.altText }}</td>
                <td>{{ picture.pictureFile }}</td>
                <td>
                    <a href="{{ path('app_picture_show', {'id': picture.id}) }}">show</a>
                    <a href="{{ path('app_picture_edit', {'id': picture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_picture_new') }}">Create new</a>
{% endblock %}
