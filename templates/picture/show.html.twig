{% extends 'base.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
    <h1>Picture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ picture.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ picture.title }}</td>
            </tr>
            <tr>
                <th>AltText</th>
                <td>{{ picture.altText }}</td>
            </tr>
            <tr>
                <th>PictureFile</th>
                <td>{{ picture.pictureFile }}</td>
            </tr>
            <tr>
                <th>Preview</th>
                <td><img src="{{ asset('/uploads/pictures/'~ picture.pictureFile) }}" height="150px"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_picture_index') }}">back to list</a>

    <a href="{{ path('app_picture_edit', {'id': picture.id}) }}">edit</a>

    {{ include('picture/_delete_form.html.twig') }}
{% endblock %}
